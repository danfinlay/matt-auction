{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext"], 
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "src/**/*",
    "bin/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
